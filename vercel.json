{
    "version": 2,
    "builds": [
      {
        "src": "app/main.py",
        "use": "@vercel/python",
        "config": {
          "runtime": "python3.12",
          "maxLambdaSize": "50mb",
          "includeFiles": "app/**/*.py",
          "installCommand": "pip install -r requirements.txt --use-pep517"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "app/main.py"
      },
      {
        "src": "/docs",
        "dest": "app/main.py"
      },
      {
        "src": "/openapi.json",
        "dest": "app/main.py"
      }
    ]
  }