{
  "version": 2,
  "builds": [
    {
      "src": "app/main.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.12",
        "maxLambdaSize": "50mb",
        "includeFiles": "app/**/*.py",
        "installCommand": "pip install -r requirements.txt --use-pep517"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "app/main.py"
    },
    {
      "source": "/docs",
      "destination": "app/main.py"
    },
    {
      "source": "/openapi.json",
      "destination": "app/main.py"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS, PATCH"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, X-Requested-With, Origin, Accept"
        },
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        }
      ]
    }
  ]
}